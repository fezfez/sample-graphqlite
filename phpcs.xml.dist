<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="colors"/>

    <!-- Ignore warnings, show progress of the run and show sniff names -->
    <arg value="nps"/>
    <file>src/</file>
    <file>config/</file>
    <file>public/</file>
    <file>run-test.php</file>

    <rule ref="Doctrine"/>
</ruleset>
